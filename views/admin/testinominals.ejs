<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/dashboard.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    
    <%- include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h3>Testinnominals Management</h3>
                    <table class="table table-hover text-center">
                        <tr>
                            <th colspan="3">Testinominals Dashboard</th>
                        </tr>
                        <tr>
                            <td>Total Testinnominals: <%=tquotes%></td>
                            <td>Total Published: <%=ptesti%></td>
                            <td>Total Unpublished: <%=untesti%></td>
                        </tr>
                    </table>
                    <h3>Search By Testinnominals Status</h3>
                    <form action="" method="post">
                        <h6 class="text-center mt-3 mb-2">Select Testinnominals Status</h6>
                        <select name="searchinput" id="" class="form-select">
                            <option value="">Search......</option>
                            <option value="All">All Status</option>
                            <option value="Published">Published</option>
                            <option value="Unpublished">Unpublished</option>
                        </select>
                        <button type="submit" class="btn btn-dark form-control mt-4 mb-3">Search</button>
                    </form>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No</th>
                            <th>User Image</th>
                            <th>Quotes</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Posted Date</th>
                            <th>Action</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><img src="/upload/<%=result.img%>" alt="" width="80px" height="70px"></td>
                                <td><%=result.quotes%></td>
                                <td><%=result.name%></td>
                                <%if(result.status=='Unpublished'){%>
                                    <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                                <%}else{%>
                                    <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                                <%}%>
                                <td><%=result.postedDate%></td>
                                <td><a href="/admin/testidelete/<%=result.id%>"><button>Delete</button></a></td>
                            </tr>
                        <%})%>

                        <%if(record.length==0){%>
                            <tr>
                                <td colspan="6"><h4>No Record Found</h4></td>
                            </tr>
                        <%}%>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('../../partials/admin/footer.ejs')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
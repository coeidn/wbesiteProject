<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/dashboard.css">
</head>
<body>
    
    <%- include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h3>Query Management</h3>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No</th>
                            <th>User Emai</th>
                            <th>Query</th>
                            <th>Status</th>
                            <th>Posted Date</th>
                            <th>Action</th>
                        </tr>

                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.email%></td>
                                <td><%=result.query%></td>
                                <%if(result.status=='Replied'){%>
                                    <td><a href="/admin/querystatus/<%=result.id%>"><button disabled><%=result.status%></button></a></td>
                                <%}else {%>
                                    <td><a href="/admin/querystatus/<%=result.id%>"><button><%=result.status%></button></a></td>
                                <%}%>
                                <td><%=result.postedDate%></td>
                                <td><a href="/admin/querydelete/<%=result.id%>"><button>Delete</button></a></td>
                            </tr>
                       <%})%>  
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('../../partials/admin/footer.ejs')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/home.css">
</head>
<body>
    
    <%- include('../partials/header.ejs')%>

    <section id="banner">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div id="bannerinfo">
                        <h5><%=bannerRecord.title%></h5>
                        <p><%=bannerRecord.desc%></p>
                        <a href="/bannermoredetails"><button class="btn btn-success">More Details...</button></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="round-img">
                        <img src="/upload/<%=bannerRecord.img%>" alt="">
                    </div>
                </div>
            </div>
          </div>
    </section>

    
    <section id="service">
           <div class="container">
            <div class="row">
                <h4>Services</h4>
                <%servicerecord.forEach((result)=>{%>
                    <div class="col-md-3">
                        <div class="service1">
                            <img src="/upload/<%=result.img%>" alt="" width="80px" height="60px">
                            <h6><%=result.title%></h6>
                            <p><%=result.desc%></p>                            
                         <a href="/servicemoredetails/<%=result.id%>"><button class="btn btn-primary">More Details...</button></a>
                        </div>
                    </div>
                <%})%>
            </div>
           </div>
    </section>

    <section id="testinominals">
        <div class="container">
            <div class="row">
                <h4>Testinominals</h4>
                <%testirecord.forEach((result)=>{%>
                    <div class="col-md-3">
                        <div class="testinominal1">
                            <img src="/upload/<%=result.img%>" alt="" width="80px">
                            <p><i class="bi bi-quote"></i><%=result.quotes%><i class="bi bi-quote"></i></p>
                            <a href="#"><button class="btn btn-success"><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i></button></a>
                            <span><%=result.name%></span>
                        </div>
                    </div>
                <%})%>
             
            </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>